<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")

<script>

        $(document).ready(function () {

            $("#SerieID").change(function () {

                var SerieID = $(this).val();

                $.ajax({

                    type: "Post",
                    url: "/Episodio/GetTemporadasList?SerieID=" + SerieID,
                    contentType: "html",
                    success: function (response) {

                        $("#TemporadaID").empty();
                        $("#TemporadaID").append(response);

                    }

                })

            })

        })
        $('#datepicker').datepicker();

</script>
}
