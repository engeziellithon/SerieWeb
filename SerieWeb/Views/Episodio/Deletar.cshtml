@model SerieWeb.Models.Admininstracao.Episodio

@{
    ViewBag.Title = "Deletar";
}
<div class="panel-header panel-header-sm">

</div>
<div class="container">
    <div class="content" style="padding: 0; min-height: calc(100vh - 123px); margin-top: -50px; margin-bottom:100px;">
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        <h5 class="title">Deletar Episodio</h5>
                    </div>
                    <div class="card-body">
                        <dl class="dl-horizontal">
                            <dt>
                                @Html.DisplayNameFor(model => model.serie.NomeSerie)
                            </dt>

                            <dd>
                                @Html.DisplayFor(model => model.serie.NomeSerie)
                            </dd>

                            <dt>
                                @Html.DisplayNameFor(model => model.Temporada.NomeTemporada)
                            </dt>

                            <dd>
                                @Html.DisplayFor(model => model.Temporada.NomeTemporada)
                            </dd>

                            <dt>
                                @Html.DisplayNameFor(model => model.NomeEpisodio)
                            </dt>

                            <dd>
                                @Html.DisplayFor(model => model.NomeEpisodio)
                            </dd>

                            <dt>
                                @Html.DisplayNameFor(model => model.NumeroEpisodio)
                            </dt>

                            <dd>
                                @Html.DisplayFor(model => model.NumeroEpisodio)
                            </dd>

                            <dt>
                                @Html.DisplayNameFor(model => model.Sinopse)
                            </dt>

                            <dd>
                                @Html.DisplayFor(model => model.Sinopse)
                            </dd>

                            <dt>
                                @Html.DisplayNameFor(model => model.Video)
                            </dt>

                            <dd>
                                @Html.DisplayFor(model => model.Video)
                            </dd>

                            <dt>
                                @Html.DisplayNameFor(model => model.DataExibicao)
                            </dt>

                            <dd>
                                @Convert.ToString(string.Format("{0:dd/MM/yyyy}", Model.DataExibicao))
                            </dd>
                        </dl>

                        @using (Html.BeginForm())
                        {
                            @Html.AntiForgeryToken()

                            <div class="form-actions no-color float-right" style="margin-right:25px">

                                @Html.ActionLink("Voltar", "Index", new object { }, new { @class = "badge badge-secondary" })
                                <input type="submit" value="Deletar" class="btn btn-danger" />
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
