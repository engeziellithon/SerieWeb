@model List<SerieWeb.Models.Admininstracao.Serie>
@{
    ViewBag.Title = "Index";
}
<div class="panel-header panel-header-sm">

</div>
<nav class="navbar navbar-expand-lg navbar-light bg-light" style="border-bottom: 1px solid #000;">
    <div class="container" style="margin-top:0">
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarsExample07" aria-controls="navbarsExample07" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarsExample07">
            <ul class="navbar-nav mr-auto">
                <li class="nav-item">
                    @Html.ActionLink("Favorito", "Index", "Perfil", new { area = "" }, new { @class = "nav-link" })

                </li>
                <li class="nav-item">
                    @Html.ActionLink("Servico", "Servico", "Perfil", new { area = "" }, new { @class = "nav-link" })

                </li>
                <li class="nav-item">
                    @Html.ActionLink("Recomendado", "Recomendado", "Perfil", new { area = "" }, new { @class = "nav-link active" })
                </li>
            </ul>

        </div>
    </div>
</nav>

<div class="container">
    <div class="card">
        <div class="card-footer" style="margin-bottom:5px">
            Lista de Séries Favoritas
        </div>
        @foreach (var serie in Model)
        {

            <div class="row">
                <div class="col-11">
                    <a href="@Url.Action("DetalhesSerie","Explorar", new { id = serie.SerieID })">
                        <img src="@serie.ImagemFavorito" style="height:200px; width:100%; margin-bottom:10px;margin-left:5px" />
                    </a>
                </div>
                <div class="col-1">
                    <button class="btn btn-danger" data-toggle="tooltip" data-placement="bottom" title="Remover série dos favoritos" style="height:200px">X</button>
                </div>
            </div>
        }
    </div>

</div>




<script>
    $('#myTab a').on('click', function (e) {
        e.preventDefault()
        $(this).tab('show')
    })
</script>
