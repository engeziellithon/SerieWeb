@model List<SerieWeb.Models.Admininstracao.Serie>
@{
    ViewBag.Title = "Index";
}
<div class="panel-header panel-header-sm">

</div>
<div class="container" style="margin-top:0;">
    <div class="row">
        <div class="col-12">
            <ul class="nav nav-tabs" id="myTab" role="tablist">
                <li class="nav-item">
                    @Html.ActionLink("Favoritos", "Index", "Perfil", new { area = "" }, new { @class = "nav-link active" })

                </li>
                <li class="nav-item">
                    @Html.ActionLink("Calendario", "Calendario", "Perfil", new { area = "" }, new { @class = "nav-link" })

                </li>
                <li class="nav-item">
                    @Html.ActionLink("Servico", "Servico", "Perfil", new { area = "" }, new { @class = "nav-link" })

                </li>
                <li class="nav-item">
                    @Html.ActionLink("Recomendado", "Recomendado", "Perfil", new { area = "" }, new { @class = "nav-link" })

                </li>
            </ul>

        </div>
    </div>
</div>

<div class="container">
    <h1 style="text-align:center">Lista de Séries Favoritas</h1>

    @foreach (var serie in Model)
    {

        <div class="row">
            <div class="col-11">
                <img src="@serie.ImagemFavorito" style="height:200px; width:100%; margin-bottom:10px" />
            </div>
            <div class="col-1">
                <button class="btn btn-danger"> X</button>
            </div>
        </div>
    }
</div>




<script>
    $('#myTab a').on('click', function (e) {
        e.preventDefault()
        $(this).tab('show')
    })
</script>
