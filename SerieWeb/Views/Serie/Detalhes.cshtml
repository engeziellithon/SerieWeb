@model SerieWeb.Models.Admininstracao.Serie

@{
    ViewBag.Title = "Detalhes";
}
<div class="panel-header panel-header-sm">

</div>
<div class="container">
    <div class="content" style="padding: 0; min-height: calc(100vh - 123px); margin-top: -50px;">
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        <h5 class="title">Detalhes da Serie</h5>
                    </div>
                    <div class="card-body">
                        <dl class="dl-horizontal">
                            <dt>
                                @Html.DisplayNameFor(model => model.NomeSerie)
                            </dt>

                            <dd>
                                @Html.DisplayFor(model => model.NomeSerie)
                            </dd>

                            <dt>
                                @Html.DisplayNameFor(model => model.Imagem)
                            </dt>

                            <dd>
                                @Html.DisplayFor(model => model.Imagem)
                            </dd>

                            <dt>
                                @Html.DisplayNameFor(model => model.Trailer)
                            </dt>

                            <dd>
                                @Html.DisplayFor(model => model.Trailer)
                            </dd>

                            <dt>
                                @Html.DisplayNameFor(model => model.Sinopse)
                            </dt>

                            <dd class="text-justify">
                                @Html.DisplayFor(model => model.Sinopse)
                            </dd>

                            <dt>
                                @Html.DisplayNameFor(model => model.Nota)
                            </dt>

                            <dd>
                                @Html.DisplayFor(model => model.Nota)
                            </dd>


                        </dl>
                        <div class="float-right" style="margin-right:25px">
                            @Html.ActionLink("Voltar", "Index", new object { }, new { @class = "badge badge-secondary" })
                            @Html.ActionLink("Editar", "Editar", new { id = Model.SerieID }, new { @class = "badge badge-primary" })
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>
</div>
