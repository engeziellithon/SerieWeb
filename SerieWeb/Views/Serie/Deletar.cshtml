@model SerieWeb.Models.Admininstracao.Serie

@{
    ViewBag.Title = "Deletar";
    var Generos = (List<SerieWeb.Models.Admininstracao.Genero>)ViewBag.listagenero;
    var Servicos = (List<SerieWeb.Models.Admininstracao.ServicoStreaming>)ViewBag.listaservico;
}
<div class="panel-header panel-header-sm">

</div>
<div class="container">
    <div class="content" style="padding: 0; min-height: calc(100vh - 123px); margin-top: -50px; margin-bottom:100px;">
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        <h5 class="title">Deletar Série</h5>
                    </div>
                    <div class="card-body">
                        <dl class="dl-horizontal">
                            <dt>
                                @Html.DisplayNameFor(model => model.NomeSerie)
                            </dt>

                            <dd>
                                @Html.DisplayFor(model => model.NomeSerie)
                            </dd>

                            <dt>
                                @Html.DisplayNameFor(model => model.Sinopse)
                            </dt>

                            <dd>
                                @Html.DisplayFor(model => model.Sinopse)
                            </dd>

                            <dt>
                                @Html.DisplayNameFor(model => model.Imagem)
                            </dt>

                            <dd>
                                @Html.DisplayFor(model => model.Imagem)
                            </dd>

                            <dt>
                                @Html.DisplayNameFor(model => model.Trailer)
                            </dt>

                            <dd>
                                @Html.DisplayFor(model => model.Trailer)
                            </dd>
                            <dt>
                                @Html.DisplayNameFor(model => model.ImagemFavorito)
                            </dt>

                            <dd>
                                @Html.DisplayFor(model => model.ImagemFavorito)
                            </dd>


                            <dt>
                                @Html.DisplayNameFor(model => model.ListGeneros)
                            </dt>


                            <dd>
                                <div class="row" style="margin-left: 1px;">
                                    @foreach (var item in Generos)
                                    {
                                        <span class="border border-black" style="margin-right: 10px; margin-top:5px;">
                                            <p class="text-justify" style="padding:5px; margin:5px">@item.NomeGenero </p>
                                        </span>
                                    }
                                </div>
                            </dd>


                            <dt>
                                @Html.DisplayNameFor(model => model.ListServicos)
                            </dt>

                            <dd>
                                <div class="row" style="margin-left: 1px;">
                                    @foreach (var item in Servicos)
                                    {
                                        <span class="border border-black" style="margin-right: 10px; margin-top:5px;">
                                            <p class="text-justify" style="padding:5px; margin:5px">@item.NomeServicoStreaming</p>
                                        </span>
                                    }
                                </div>
                            </dd>



                        </dl>

                        @using (Html.BeginForm())
                        {
                            @Html.AntiForgeryToken()

                            <div class="form-actions no-color float-right" style="margin-right:25px">

                                @Html.ActionLink("Voltar", "Index", new object { }, new { @class = "badge badge-secondary" })
                                <input type="submit" value="Deletar" class="btn btn-danger" />
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>