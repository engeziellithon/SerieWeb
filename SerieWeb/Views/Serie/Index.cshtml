@model IEnumerable<SerieWeb.Models.Serie>

@{
    ViewBag.Title = "Lista de Séries";
}
<div class="panel-header panel-header-sm">

</div>
<div class="container">
    <div class="content" style="padding: 0; min-height: calc(100vh - 123px); margin-top: -50px;">
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        <div class="row justify-content-between">
                            <div class="col-6"><h5 class="title">Séries</h5></div>
                            <div class="float-right" style="margin-right:18px">@Html.ActionLink("Adicionar", "Adicionar", new object { }, new { @class = "btn btn-primary" })</div>
                        </div>

                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table id="SerieTable" class="table table-striped table-bordered" style="width:100%">
                                <thead>
                                    <tr>
                                        <th>
                                            @Html.DisplayNameFor(model => model.NomeSerie)
                                        </th>
                                        <th class="d-none d-sm-block">
                                            @Html.DisplayNameFor(model => model.Sinopse)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.Nota)
                                        </th>
                                        <th> Opções</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {

                                        <tr>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.NomeSerie)
                                            </td>

                                            <td class="d-none d-sm-block">
                                                @Html.DisplayFor(modelItem => item.Sinopse)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Nota)
                                            </td>
                                            <td>
                                                @Html.ActionLink("Editar", "Editar", new { id = item.SerieID }) 
                                                @Html.ActionLink("Detalhes", "Detalhes", new { id = item.SerieID }) 
                                                @Html.ActionLink("Deletar", "Deletar", new { id = item.SerieID })

                                            </td>
                                        </tr>

                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/bundles/datatables")
    
    <script>
        $(document).ready(function () {
            $('#SerieTable').DataTable({
                "language": {
                    "sEmptyTable": "Nenhum registro encontrado",
                    "sInfo": "Mostrando de _START_ até _END_ de _TOTAL_ registros",
                    "sInfoEmpty": "Mostrando 0 até 0 de 0 registros",
                    "sInfoFiltered": "(Filtrados de _MAX_ registros)",
                    "sInfoPostFix": "",
                    "sInfoThousands": ".",
                    "sLengthMenu": "_MENU_ resultados por página",
                    "sLoadingRecords": "Carregando...",
                    "sProcessing": "Processando...",
                    "sZeroRecords": "Nenhum registro encontrado",
                    "sSearch": "Pesquisar",
                    "oPaginate": {
                        "sNext": "Próximo",
                        "sPrevious": "Anterior",
                        "sFirst": "Primeiro",
                        "sLast": "Último"
                    },
                    "oAria": {
                        "sSortAscending": ": Ordenar colunas de forma ascendente",
                        "sSortDescending": ": Ordenar colunas de forma descendente"
                    }
                },               
                "scrollX": true,            
                "pagingType": "simple",
                "info": false,
                "bLengthChange": false                    
            });
        });
    </script>
}
