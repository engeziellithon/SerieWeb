@model IEnumerable<SerieWeb.Models.Serie>

@{
    ViewBag.Title = "Index";
}

<div class="container">
    <h2>Lista de Series</h2>
    <hr />
    <p>
        @Html.ActionLink("Adicionar", "Adicionar")
    </p>
    <table id="SerieTable" class="table table-striped table-bordered" style="width:100%">
        <thead>
            <tr>
                <th>
                    Nome 
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Imagem)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Sinopse)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Nota)
                </th>
                <th> Opções</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {

                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.NomeSerie)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Imagem)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Sinopse)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Nota)
                    </td>
                    <td>
                        @Html.ActionLink("Editar", "Editar", new { id = item.SerieID }) |
                        @Html.ActionLink("Detalhes", "Detalhes", new { id = item.SerieID }) |
                        @Html.ActionLink("Deletar", "Deletar", new { id = item.SerieID })

                    </td>
                </tr>

            }
        </tbody>
    </table>
</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
