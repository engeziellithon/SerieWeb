                                    <img src="@item.Imagem" class="d-block img-fluid" style="height:200px; width:150px;">
                                </a>
                            </div>
                            <div class="col-md-10">
                                <h3>@item.NomeSerie</h3>
                                <p class="text text-justify">@item.Sinopse</p>
                            </div>

                        </div>
                        @*<div class="row" style="margin-bottom:10px">
                                <div class="col-12">
                                    <a href="@Url.Action("DetalhesSerie", "Explorar", new { id = @item.SerieID })" class="btn btn-primary btn-lg btn-block">Ir para serie</a>
                                </div>
                            </div>*@
                    </div>
                }
            </div>
