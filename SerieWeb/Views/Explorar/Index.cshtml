@model IEnumerable<SerieWeb.Models.Serie>
@{
    ViewData["Title"] = "Index";
}

<div class="container">
    <div class="col-12">
        <div class="row">
            @foreach (var item in Model)
            {
                <a href="/Explorar/DetalhesSerieFavorito/@item.SerieID">
                    @*<a href="@Url.Action("DetalhesSerieFavorito","Explorar", new { @item.SerieID })">*@
                    <div class="col-sm-6 col-md-4 col-lg-3">
                        <div class="card explorarCard">
                            <img class="card-img-top" src="@item.Imagem">
                            <div class="card-block">
                                <h5 class="text-bold text-center">@item.NomeSerie</h5>
                            </div>
                        </div>
                    </div>
                </a>
            }            
        </div>
    </div>
</div>
