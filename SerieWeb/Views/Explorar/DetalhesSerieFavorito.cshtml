@model  SerieWeb.Models.SerieViewModels.DetalhesSerieViewModel
@{
    ViewBag.Title = "DetalhesSerieFavorito";
}
@foreach (var item in Model.serie)
{
    <div class="container-fluid DetalhesSerie">
        <div class="containerDetalhesSerie container">
            <div class="row">
                <div class="col-sm-4 col-md-4 col-lg-4 col-xl-4 containerImagemdetalhes">
                    <img src="@item.Imagem" class="img-seriedetalhes img-responsive rounded mx-auto d-block" alt="Responsive image">
                </div>
                <div class="col-8 containerInfoDetalhes">
                    <h1 class="text-white">@item.NomeSerie</h1>
                    <br />
                    <br />
                    <div class="row btnDetalhes">
                        <div class="col-3">
                            <button type="button" class="btn btn-secondary" data-toggle="tooltip" data-placement="top" title="<em>Tooltip</em> <u>with</u> <b>HTML</b>">1</button>
                        </div>
                        <div class="col-3">
                            <button type="button" class="btn btn-secondary">2</button>
                        </div>
                        <div class="col-3">
                            <button type="button" class="btn btn-secondary">3</button>
                        </div>
                        <div class="col-3">
                            <button type="button" class="btn btn-secondary">4</button>
                        </div>
                    </div>
                    <div>
                        <h2 class="text-white">Sinopse</h2>
                        <p class="text-justify text-white">@item.Sinopse</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
}
<div class="container">
    <table class="table table-bordered">
        <tr>
            <th>
                Temporada
            </th>

        </tr>

        @foreach (var item in Model.temporada)
        {
            <tr>
                <td>
                    @item.NomeTemporada
                </td>
            </tr>
        }

    </table>
</div>

<div class="container">
    <table class="table table-bordered">
        <tr>
            <th>
                episodio
            </th>

        </tr>

        @foreach (var item in Model.episodio)
        {
            <tr>
                <td>
                    @item.NomeEpisodio
                </td>
            </tr>
        }

    </table>
</div>
@section Scripts {
    <script>
        $(function () {
            $('[data-toggle="tooltip"]').tooltip()
        })
    </script>
}