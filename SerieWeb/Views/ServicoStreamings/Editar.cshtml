@model SerieWeb.Models.Admininstracao.ServicoStreaming

@{
    ViewBag.Title = "Editar";
}
<div class="panel-header panel-header-sm">

</div>
<div class="container">

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        <div class="content" style="padding: 0; min-height: calc(100vh - 123px); margin-top: -50px;">
            <div class="row">
                <div class="col-md-12">
                    <div class="card">
                        <div class="card-header">
                            <h5 class="title">Editar Serviços</h5>
                        </div>
                        <div class="card-body">
                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                            @Html.HiddenFor(model => model.ServicoStreamingID)
                            <div class="row">
                                <div class="col-md-12 px-1">
                                    <div class="form-group">
                                        @Html.LabelFor(model => model.NomeServicoStreaming, htmlAttributes: new { @class = "control-label" })
                                        <div class="col-md-12">
                                            @Html.EditorFor(model => model.NomeServicoStreaming, new { htmlAttributes = new { @class = "form-control" } })
                                            @Html.ValidationMessageFor(model => model.NomeServicoStreaming, "", new { @class = "text-danger" })
                                        </div>
                                    </div>
                                </div>
                            </div>

                        </div>
                        <div class="form-group">
                            <div>
                                <div class="float-right" style="margin-right:25px">
                                    @Html.ActionLink("Voltar", "Index", new object { }, new { @class = "badge badge-secondary" })
                                    <input type="submit" value="Salvar" class="btn btn-primary" />
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</div>


